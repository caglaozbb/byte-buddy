{
    "manifest_version": 3,
    "name": "Byte Buddy",
    "version": "1.0",
    "description": "With this extension, you can feed your own virtual pet and interact with it.",
    "icons": {
        "48": "public/chick-icon-new.png"
    },
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "48": "public/chick-icon-new.png"
        }
    }
}